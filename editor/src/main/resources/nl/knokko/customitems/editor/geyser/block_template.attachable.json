{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "geyser_custom:kci_%ITEM_NAME%",
      "materials": {
        "default": "entity_alphatest_one_sided",
        "enchanted": "entity_alphatest_one_sided"
      },
      "textures": {
        "default": "textures/kci/%TEXTURE_PATH%",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.kci_%BLOCK_MODEL_TYPE%_block"
      },
      "scripts": {
        "pre_animation": [
          "v.main_hand = c.item_slot == 'main_hand';",
          "v.off_hand = c.item_slot == 'off_hand';",
          "v.head = c.item_slot == 'head';"
        ],
        "animate": [
          {
            "thirdperson_main_hand": "v.main_hand && !c.is_first_person"
          },
          {
            "thirdperson_off_hand": "v.off_hand && !c.is_first_person"
          },
          {
            "thirdperson_head": "v.head && !c.is_first_person"
          },
          {
            "firstperson_main_hand": "v.main_hand && c.is_first_person"
          },
          {
            "firstperson_off_hand": "v.off_hand && c.is_first_person"
          },
          {
            "firstperson_head": "c.is_first_person && v.head"
          }
        ]
      },
      "animations": {
        "thirdperson_main_hand": "animation.geyser_custom.kci_block.thirdperson_main_hand",
        "thirdperson_off_hand": "animation.geyser_custom.kci_block.thirdperson_off_hand",
        "thirdperson_head": "animation.geyser_custom.kci_block.head",
        "firstperson_main_hand": "animation.geyser_custom.kci_block.firstperson_main_hand",
        "firstperson_off_hand": "animation.geyser_custom.kic_block.firstperson_off_hand",
        "firstperson_head": "animation.geyser_custom.disable"
      },
      "render_controllers": [
        "controller.render.item_default"
      ]
    }
  }
}
